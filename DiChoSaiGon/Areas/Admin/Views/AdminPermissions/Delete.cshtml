@model DiChoSaiGon.Models.Permission

@{
    ViewData["Title"] = "Xóa quyền";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPermissions" asp-action="Index">Danh sách quyền</a>
        </nav>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.PermissionId</td>
                </tr>
                <tr>
                    <td>Role:</td>
                    <td>@Model.Role.RoleName</td>
                </tr>
                <tr>
                    <td>Quyền:</td>
                    <td>@Model.Function.FunctionName</td>
                </tr>
                <tr>
                    <td>AccessPermision:</td>
                    <td>
                        @if (Model.AccessPermission)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled>
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-2" disabled>
                                <label for="switch-2"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>CanCreate:</td>
                    <td>
                        @if (Model.CanCreate)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled>
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-2" disabled>
                                <label for="switch-2"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>CanRead:</td>
                    <td>
                        @if (Model.CanRead)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled>
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-2" disabled>
                                <label for="switch-2"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>CanEdit:</td>
                    <td>
                        @if (Model.CanEdit)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled>
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-2" disabled>
                                <label for="switch-2"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>CanDelete:</td>
                    <td>
                        @if (Model.CanDelete)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled>
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-2" disabled>
                                <label for="switch-2"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Xác nhận xóa:</td>
                    <td>
                        <form asp-controller="AdminPermissions" asp-action="Delete" asp-route-id="@Model.PermissionId">
                            <input type="hidden" asp-for="PermissionId" />
                            <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
